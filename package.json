{
  "name": "rcv-table",
  "version": "0.0.1",
  "description": "High-performance virtual table component based on Canvas",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter playground dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean",
    "type-check": "pnpm -r type-check",
    "prepare": "husky install"
  },
  "keywords": [
    "table",
    "canvas",
    "virtual-scroll",
    "react",
    "typescript",
    "performance"
  ],
  "author": "baymaxbowen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baymaxbowen/rcv-table.git"
  },
  "bugs": {
    "url": "https://github.com/baymaxbowen/rcv-table/issues"
  },
  "homepage": "https://github.com/baymaxbowen/rcv-table#readme",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}